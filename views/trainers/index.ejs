<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Trainer Index || TT</title>
</head>
<body>
     <%- include('../partials/navbar.ejs') %>

     <div class="page-container">
        <header class="index-header">
     <% if (typeof listType !== 'undefined' && listType === 'my-trainers') { %>
        <h1>Here's a run-down of your <span>trainers!</span></h1>
    <% } else { %>
        <h1>Here's a run-down of all <span>trainers!</span></h1>
    <% } %>
    </header>

    <div class="trainer-grid">
        <% trainers.forEach(trainer => { %>
            <div class="trainer-card">
                <div class="card-brand"><%= trainer.brand %></div>
                <h3 class="card-nickname"><%= trainer.nickname %></h3>

            <div class="card-meta">
                <div>Owner: <%= trainer.owner.username %></div>
            </div>

            <div class="card-footer">
                <a href="/trainers/<%= trainer._id %>" class="view-btn">View Details</a>
            </div>
        </div>
        <% }); %>
    </div> 
</div>

  <%- include('partials/footer') %>
</body>
</html>